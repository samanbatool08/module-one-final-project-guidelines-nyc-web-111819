# frozen_string_literal: true
source "https://rubygems.org"

# Gemfiles that we need: 
# * activerecord (connects my models to my database)
# * rake
# * sinatra-activerecord (this contains rake tasks that we will use)
# * pry 
# * sqlite3

gem 'activerecord', '~> 5.0'
gem "sinatra-activerecord"
gem "sqlite3", '~> 1.4'
gem "pry"
gem 'rake'
gem "require_all"
gem 'tty-prompt'
